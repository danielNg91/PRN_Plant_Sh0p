@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center h-100 d-flex justify-content-center align-items-center" style="height:90vh!important">
    <img class="plant-pot-img" src="/img/flower-crop.png">
    <div style="line-height: 12vh;">
        <div class="happiness">Happiness</div>
        <div class="font-weight-light inverse my-2" style="line-height: 1;">grows in your</div>
        <div class="font-weight-bolder flower font-italic">flowers</div>
        <hr/>
        <button class="btn rounded-pill btn-outline-secondary btn-lg">SHOP NOW</button>
    </div>
</div>

<div class="text-center position-relative overflow-hidden">
    <img src="/img/garden-bg.jpg" class="w-100 home-bg"/>
    <div class="position-absolute w-100"
        style="top:0; left:0;background: rgba(0, 0, 0, 0.7);color:#fafafa; height:100%;padding-top:35vh">
        <h1>We are Dac, Tan, Thanh, Ha, and we sell <span class="font-italic">plants</span>.</h1>
        <div class="pt-3">We programmers care for you and our nature.</div>
        <div class="pb-5">That's why we created this page to sell you plants and spread the green.</div>
            <button class="btn-outline-only rounded-pill btn-lg mx-3">Browse Plants</button>
            <button class="btn-outline-only rounded-pill btn-lg mx-3">Go to Cart</button>
            <button class="btn-outline-only rounded-pill btn-lg mx-3">About Us</button>
    </div>
</div>

<div class="d-flex py-4">
    
    <img class="logo" src="/img/plant.png" />
    <img class="logo" src="/img/plant.png" />
    <img class="logo" src="/img/plant.png" />
    <img class="logo" src="/img/plant.png" />
    <h1 class="px-3 pt-1">Our Products</h1>
    <img class="logo" src="/img/plant.png" />
    <img class="logo" src="/img/plant.png" />
    <img class="logo" src="/img/plant.png" />
    <img class="logo" src="/img/plant.png" />
</div>

@foreach (var obj in Model.Products)
{
    <div class="position-relative w-100 d-flex" style="border: 10vh solid var(--secondary)">
        <div class="vh-100 w-50 d-flex flex-column justify-content-center align-items-center" style="background-color: #161618; color: var(--secondary)">
            <div class="display-2 font-weight-lighter">@obj.Name</div>
            @foreach (var cate in Model.ProductCategories)
            {
                @if (@cate.Id == @obj.CategoryId)
                {
                    <div class="h2 font-italic" style="color:var(--primary)">@cate.Name</div> 
                }
            }


            <div class="font-weight-light" style="color:var(--primary)">@Convert.ToInt32(@obj.Price) VND</div>

            @foreach (var disc in Model.ProductDiscounts)
            {
                @if (@obj.DiscountId == @disc.Id && @disc.Active)
                {
                    <div class="lead" style="color:var(--primary)">Now only @Convert.ToInt32(@disc.DiscountPercent * @obj.Price) VND</div>
                }
            }
                
        </div>
        <img class=" vh-100 w-50" src="@obj.Description" style="object-fit: cover;" />
    </div>
}


<div class="d-flex">
    <img class="rounded-circle" style="height:30vh" src="/img/dac.jpg" />
    <img class="rounded-circle" style="height:30vh" src="/img/thanh.jpg" />
    <img class="rounded-circle" style="height:30vh" src="/img/tan.jpg" />
    <img class="rounded-circle" style="height:30vh" src="/img/ha.jpg" />
</div>
    
<style>
    .plant-pot-img {
        height: 79vh;
    }
    .happiness {
        font-size: 10vh;
    }
    .flower {
        font-size: 15vh;
        color: var(--secondary);
    }
    .home-bg {
        opacity: 0.8;
        height: 100vh;
    }
    .btn-outline-only {
        border: 2px solid var(--primary);
        color: var(--primary);
        background: transparent;
    }
    .btn-outline-only:hover {
        background:rgba(224, 240, 218, 0.46);
    }

    .logo {
        height: 5vw;
    }

</style>